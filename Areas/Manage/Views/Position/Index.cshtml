@{
    ViewData["Title"] = "Index";
}
@model IEnumerable<Position>
<div class="table-responsive">
 <table class="table">
   <thead>
     <tr>
       <th>Id</th>
       <th>Name</th>
       <th>Count</th>
     </tr>
   </thead>
   <tbody>
            @foreach (var item in (Model ?? new List<Position>()))
            {
                <tr>
                  <td>@item.Id</td>
                  <td>@item.Name</td>
                  <td>@item.Employees?.Count</td>
                  <td><a type="button" class="btn btn-dark" asp-area="Manage" asp-controller="Position" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
                  <td><a type="button" class="btn btn-success"  asp-area="Manage" asp-controller="Position" asp-action="Update" asp-route-id="@item.Id">Update</a></td>
                </tr>
            }
   </tbody>  
 </table>
</div>
